    "test": "jest"
  },
  "dependencies": {
    "fastify": "^4.26.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "openapi-typescript": "^7.0.0-next.8",
    "typescript": "^5.4.3"
  }
}

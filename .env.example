# Language Learning Tools - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Anthropic API (recommended for dictionary generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (alternative for dictionary generation)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Set debug mode for development
LANGTOOLS_DEBUG=true

# Optional: Override default model
LANGTOOLS_DEFAULT_MODEL=claude-3-5-sonnet-20241022
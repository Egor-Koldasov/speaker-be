# Example environment variables for development
# Copy this file to .env and update the values

# Database (PostgreSQL for development)
# Run `docker compose up -d postgres` to start the development database
DATABASE_URL=postgresql://langtools:langtools_dev_password@localhost:5433/langtools

# Hydra OAuth2 Configuration
HYDRA_PUBLIC_URL=http://localhost:4444
LOGIN_UI_URL=http://localhost:3000

# Production/Remote Deployment Example:
# HYDRA_PUBLIC_URL=https://auth.yourdomain.com
# LOGIN_UI_URL=https://login.yourdomain.com

# Security (IMPORTANT: Change these in production!)
HYDRA_SYSTEM_SECRET=this-is-a-very-insecure-secret-change-it
HYDRA_PAIRWISE_SALT=some-random-salt

# Logging
HYDRA_LOG_LEVEL=debug

# Legacy JWT Settings (will be removed when migrating to Hydra)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OTP Settings
OTP_EXPIRE_MINUTES=10

# API Settings
API_TITLE=Langtools API
API_VERSION=0.1.0

# Environment
ENVIRONMENT=development

# E2E Test Settings
ALLOW_E2E_TEST_USERS=true

# Test Configuration
# URL of the API server to test against
TEST_API_URL=http://localhost:8000
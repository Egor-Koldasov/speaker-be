{
  "type": [
    "object"
  ],
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "LensModels",
  "additionalProperties": false,
  "title": "LensModels",
  "properties": {
    "LensCardConfig": {
      "type": [
        "object"
      ],
      "$schema": "http://json-schema.org/draft-07/schema",
      "$id": "LensCardConfig",
      "additionalProperties": false,
      "title": "LensCardConfig",
      "description": "CardConfig with its fieldConfigs loaded",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the card config"
        },
        "fieldConfigs": {
          "type": "array",
          "items": {
            "type": [
              "object"
            ],
            "$schema": "http://json-schema.org/draft-07/schema",
            "$id": "FieldConfig",
            "additionalProperties": false,
            "title": "FieldConfig",
            "properties": {
              "id": {
                "$rel": "./DbId.json"
              },
              "createdAt": {
                "type": "string",
                "description": "ISO 8601 date string"
              },
              "updatedAt": {
                "type": "string",
                "description": "ISO 8601 date string"
              },
              "deletedAt": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "ISO 8601 date string or null"
              },
              "name": {
                "type": "string",
                "description": "The name of the field defined by user and displayed back to user"
              },
              "valueType": {
                "type": "string",
                "$schema": "http://json-schema.org/draft-07/schema",
                "$id": "FieldConfigValueType",
                "title": "FieldConfigValueType",
                "enum": [
                  "Text",
                  "Image",
                  "Audio"
                ],
                "description": "The type of the value for AI to generate"
              },
              "minResult": {
                "type": "number",
                "default": 1,
                "description": "The minimum number of results for AI to generate. If the AI cannot generate enough results it can return less, but otherwise should match"
              },
              "maxResult": {
                "type": "number",
                "default": 1,
                "description": "The maximum number of results for AI to generate. AI should never generate more than this number of results."
              },
              "prompt": {
                "type": "string",
                "desctiption": "The user prompt for the AI, explaining what the AI should generate."
              }
            },
            "required": [
              "id",
              "createdAt",
              "updatedAt",
              "deletedAt",
              "name",
              "valueType",
              "minResult",
              "maxResult",
              "prompt"
            ]
          },
          "meta": {
            "relation": "ManyToMany"
          }
        }
      },
      "required": [
        "name",
        "fieldConfigs"
      ]
    },
    "LensCardValue": {
      "type": [
        "object"
      ],
      "$schema": "http://json-schema.org/draft-07/schema",
      "$id": "LensCardValue",
      "additionalProperties": false,
      "title": "LensCardValue",
      "properties": {
        "cardConfigId": {
          "type": "string",
          "$schema": "http://json-schema.org/draft-07/schema",
          "$id": "DbId",
          "title": "DbId",
          "description": "SurrealDb Id string with a format \"Table:uuid\". Where `uuid` is UUID v7 string"
        },
        "fields": {
          "type": "array",
          "items": {
            "id": {
              "$rel": "./DbId.json"
            },
            "createdAt": {
              "type": "string",
              "description": "ISO 8601 date string"
            },
            "updatedAt": {
              "type": "string",
              "description": "ISO 8601 date string"
            },
            "deletedAt": {
              "type": [
                "string",
                "null"
              ],
              "description": "ISO 8601 date string or null"
            },
            "fieldConfigId": {
              "$ref": "#/properties/LensCardValue/properties/cardConfigId"
            },
            "fieldValues": {
              "type": "array",
              "items": {
                "type": [
                  "object"
                ],
                "$schema": "http://json-schema.org/draft-07/schema",
                "$id": "FieldValue",
                "additionalProperties": false,
                "title": "FieldValue",
                "description": "A value result of FieldConfig. Either AI generated or user input.",
                "properties": {
                  "id": {
                    "$rel": "./DbId.json"
                  },
                  "createdAt": {
                    "type": "string",
                    "description": "ISO 8601 date string"
                  },
                  "updatedAt": {
                    "type": "string",
                    "description": "ISO 8601 date string"
                  },
                  "deletedAt": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "ISO 8601 date string or null"
                  },
                  "text": {
                    "type": "string"
                  },
                  "fileId": {
                    "$ref": "#/properties/LensCardValue/properties/cardConfigId"
                  },
                  "fieldSetId": {
                    "$ref": "#/properties/LensCardValue/properties/cardConfigId"
                  }
                },
                "required": [
                  "id",
                  "createdAt",
                  "updatedAt",
                  "deletedAt",
                  "text",
                  "fileId",
                  "fieldSetId"
                ]
              }
            }
          }
        }
      },
      "required": [
        "cardConfigId",
        "fields"
      ]
    }
  },
  "required": [
    "LensCardConfig",
    "LensCardValue"
  ]
}
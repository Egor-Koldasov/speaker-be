{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "MessageBase",
  "required": ["input"],
  "properties": {
    "input": {
      "type": "object",
      "required": ["name", "data"],
      "properties": {
        "name": {
          "type": "string",
          "const": "MessageBase"
        },
        "data": {
          "type": "object",
          "properties": {},
          "required": []
        }
      }
    },
    "output": {
      "description": "Message output",
      "type": "object",
      "properties": {
        "data": {
          "type": ["object", "null"],
          "required": [],
          "properties": {}
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["message"],
            "properties": {
              "message": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}

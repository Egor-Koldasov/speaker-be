{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "MessageDefineWord",
  "required": ["input"],
  "properties": {
    "input": {
      "type": "object",
      "required": ["name", "data"],
      "properties": {
        "name": {
          "type": "string",
          "const": "defineWord"
        },
        "data": {
          "type": "object",
          "properties": {
            "wordString": {
              "type": "string",
              "description": "A word or a common phrase to define"
            },
            "context": {
              "type": "string",
              "description": "A context from which the word or phrase is taken"
            },
            "originalLanguages": {
              "$ref": "./Property.schema.json#/$defs/originalLanguages"
            },
            "translationLanguage": {
              "$ref": "./Property.schema.json#/$defs/translationLanguage"
            }
          },
          "required": [
            "wordString",
            "context",
            "originalLanguages",
            "translationLanguage"
          ]
        }
      }
    },
    "output": {
      "type": "object",
      "required": ["definition"],
      "properties": {
        "definition": {
          "$ref": "./Word.schema.json"
        }
      }
    }
  }
}

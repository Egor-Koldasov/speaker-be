{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "MessageTextToSpeech",
  "required": ["input"],
  "properties": {
    "input": {
      "type": "object",
      "required": ["name", "data"],
      "properties": {
        "name": {
          "type": "string",
          "const": "textToSpeech"
        },
        "data": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "Text to convert to speech",
              "minLength": 1
            }
          },
          "required": ["text"]
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Message output",
      "required": [],
      "properties": {
        "audio": {
          "type": "string",
          "description": "Base64 encoded audio data",
          "contentMediaType": "audio/mpeg",
          "contentEncoding": "base64"
        }
      }
    }
  }
}
